<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>YouTube Clone</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background: #121212;
            margin: 0;
            padding: 0;
            color: white;
        }

        .header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            background: #ff0000;
            padding: 15px 20px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            color: white;
            font-weight: bold;
            font-size: 24px;
        }

        .search-bar {
            flex-grow: 1;
            display: flex;
            justify-content: center;
        }

        .search-bar input {
            padding: 10px;
            width: 400px;
            font-size: 16px;
            border-radius: 20px;
            border: none;
            outline: none;
            text-indent: 10px;
        }

        .video-container {
            display: flex;
            flex-direction: column;
            gap: 20px;
            padding: 20px;
        }

        .video-card {
            display: flex;
            background: #181818;
            border-radius: 12px;
            overflow: hidden;
            padding: 20px;
            gap: 20px;
        }

        .video-player {
            flex: 1;
            min-width: 300px;
        }

        .video-player iframe {
            width: 100%;
            height: 300px;
            border-radius: 8px;
        }

        .video-info {
            flex: 2;
            padding: 0 15px;
        }

        .video-info h3 {
            font-size: 20px;
            color: white;
            margin: 0 0 10px 0;
        }

        .video-info p {
            font-size: 14px;
            color: #aaa;
            margin: 5px 0;
        }

        .url-container {
            background: #282828;
            padding: 10px;
            border-radius: 6px;
            margin: 10px 0;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .url-text {
            color: #3ea6ff;
            word-break: break-all;
            font-size: 14px;
        }

        .copy-btn {
            background: #3ea6ff;
            color: white;
            border: none;
            padding: 5px 10px;
            border-radius: 4px;
            cursor: pointer;
            margin-left: 10px;
            font-size: 12px;
        }

        .copy-btn:hover {
            background: #2d8bdf;
        }

        .quiz-btn {
            background: #ff0000;
            color: white;
            border: none;
            padding: 10px 15px;
            border-radius: 4px;
            cursor: pointer;
            font-weight: bold;
            margin: 15px 0;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

        .quiz-btn:hover {
            background: #cc0000;
        }

        .metadata {
            display: flex;
            gap: 15px;
            margin: 10px 0;
            flex-wrap: wrap;
        }

        .metadata-item {
            display: flex;
            align-items: center;
            gap: 5px;
            font-size: 13px;
        }

        @media (max-width: 768px) {
            .video-card {
                flex-direction: column;
            }
            
            .video-player iframe {
                height: 200px;
            }
        }
    </style>

</head>
<body>
    <div class="header">
        <div>YouTube Clone</div>
        <div class="search-bar">
            <input type="text" placeholder="Search videos...">
        </div>
    </div>

    <div class="video-container">
        <% videos.forEach(video => { 
            const embedUrl = video.embedUrl;
            const videoId = embedUrl.match(/embed\/([^?]+)/)[1];
            const youtubeUrl = `https://www.youtube.com/watch?v=${videoId}`;
        %>
            <div class="video-card">
                <div class="video-player">
                    <iframe src="<%= embedUrl %>" allowfullscreen></iframe>
                </div>
                <div class="video-info">
                    <h3><%= video.title %></h3>
                    
                    <div class="metadata">
                        <div class="metadata-item">
                            <i class="fas fa-eye"></i>
                            <span><%= video.views || '1M views' %></span>
                        </div>
                        <div class="metadata-item">
                            <i class="fas fa-calendar-alt"></i>
                            <span><%= video.publishedDate || '2 days ago' %></span>
                        </div>
                        <div class="metadata-item">
                            <i class="fas fa-clock"></i>
                            <span><%= video.duration || '10:30' %></span>
                        </div>
                    </div>
                    
                    <p><strong>Channel:</strong> <%= video.channel || 'Code Masters' %></p>
                    
                    <div class="url-container">
                        <span class="url-text" id="url-<%= videoId %>"><%= youtubeUrl %></span>
                        <button class="copy-btn" onclick="copyToClipboard('url-<%= videoId %>')">
                            <i class="far fa-copy"></i> Copy
                        </button>
                    </div>
                    
                    <!-- Updated Quiz Button with /home route -->
                    <button class="quiz-btn" onclick="generateQuiz('<%= youtubeUrl %>')">
                        <i class="fas fa-question-circle"></i> Generate Quiz
                    </button>
                </div>
            </div>
        <% }); %>
    </div>

    <script>
        function copyToClipboard(elementId) {
            const element = document.getElementById(elementId);
            const text = element.textContent;
            
            navigator.clipboard.writeText(text).then(() => {
                const btn = element.nextElementSibling;
                const originalText = btn.innerHTML;
                btn.innerHTML = '<i class="fas fa-check"></i> Copied!';
                
                setTimeout(() => {
                    btn.innerHTML = originalText;
                }, 2000);
            });
        }

        function generateQuiz(youtubeUrl) {
            // Redirect to /home route with video URL parameter
            window.location.href = `/home?videoUrl=${encodeURIComponent(youtubeUrl)}`;
            
            // Alternative: If you want to keep the transcribe endpoint but show results on /home
            // You can first call /transcribe then redirect to /home with the quiz data
            // fetch(`/transcribe?videoUrl=${encodeURIComponent(youtubeUrl)}`)
            //     .then(response => response.json())
            //     .then(data => {
            //         window.location.href = `/home?quiz=${encodeURIComponent(JSON.stringify(data))}`;
            //     });
        }
    </script>
</body>
</html>