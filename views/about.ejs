    <style>
        :root {
    --neon-pink: #ff00ff;
    --electric-blue: #00f3ff;
    --violet: #9d00ff;
    --magenta: #ff0066;
    --cyber-green: #00ff9d;
    --dark-bg: linear-gradient(45deg, #0f0c29, #302b63, #24243e);
}

/* Base Styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Segoe UI', sans-serif;
}

body {
    background: var(--dark-bg);
    color: white;
    min-height: 100vh;
    overflow-x: hidden;
}

.particles {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle, 
        var(--neon-pink) 0%, 
        var(--electric-blue) 50%, 
        transparent 100%);
    opacity: 0.05;
    z-index: 0;
    animation: particles 20s linear infinite;
}

@keyframes particles {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}

/* Navigation */
.navbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 2rem;
    background: rgba(0,0,0,0.4);
    backdrop-filter: blur(10px);
    position: fixed;
    width: 100%;
    top: 0;
    z-index: 1000;
}

.navbar-logo {
    display: flex;
    align-items: center;
    gap: 1rem;
}

.logo-img {
    height: 40px;
    filter: drop-shadow(0 0 10px var(--electric-blue));
}

.logo {
    font-family: 'Pacifico', cursive;
    font-size: 2rem;
    background: linear-gradient(45deg, var(--neon-pink), var(--electric-blue));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
}

.navbar-links {
    display: flex;
    gap: 2rem;
    list-style: none;
}

.navbar-links a {
    color: white;
    text-decoration: none;
    padding: 0.5rem 1rem;
    border-radius: 8px;
    transition: all 0.3s ease;
}

.navbar-links a:hover {
    background: rgba(255,255,255,0.1);
    text-shadow: 0 0 15px var(--electric-blue);
}

.navbar-links .active {
    background: rgba(255,255,255,0.2);
}

.generate-btn {
    padding: 0.8rem 2rem;
    background: linear-gradient(45deg, var(--magenta), var(--neon-pink));
    border-radius: 8px;
    color: white;
    text-decoration: none;
    transition: all 0.3s ease;
}

.generate-btn:hover {
    transform: scale(1.05);
    box-shadow: 0 0 30px rgba(255,0,255,0.3);
}

/* Main Content */
.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
    position: relative;
    z-index: 1;
    margin-top: 80px;
}

/* About Page Specific */
.about-hero {
    text-align: center;
    padding: 4rem 2rem;
    margin-bottom: 3rem;
}

.mission-text {
    padding: 2rem;
    background: rgba(0,0,0,0.3);
    border-radius: 15px;
    line-height: 1.6;
}

.stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin: 3rem 0;
}

.team-card, .stat-card {
    text-align: center;
    padding: 2rem;
    transition: all 0.3s ease;
}

.team-card:hover, .stat-card:hover {
    transform: translateY(-10px);
}

.team-card h3 {
    margin: 1rem 0;
    background: linear-gradient(45deg, var(--cyber-green), var(--electric-blue));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
}

.stat-card h3 {
    font-size: 2.5rem;
    margin: 1rem 0;
    background: linear-gradient(45deg, var(--neon-pink), var(--violet));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
}

/* Responsive Design */
@media (max-width: 768px) {
    .navbar {
        flex-direction: column;
        gap: 1rem;
        padding: 1rem;
    }

    .combined-content-section {
        flex-direction: column;
    }

    .about-hero {
        padding: 2rem 1rem;
    }
}

@media (max-width: 480px) {
    .container {
        padding: 1rem;
    }
    
    .logo {
        font-size: 1.5rem;
    }
    
    .mission-text {
        padding: 1rem;
    }
}
    </style>
