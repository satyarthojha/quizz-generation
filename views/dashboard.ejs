<body>
    <div class="particles"></div>

    <!-- Navigation -->
    <nav class="navbar">
        <div class="navbar-logo">
            <img src="https://img.freepik.com/premium-vector/quiz-logo-with-speech-bubble-icon_149152-811.jpg" 
                 alt="U-Quiz" 
                 class="logo-img">
            <span class="logo">U-Quiz</span>
        </div>
        <ul class="navbar-links">
            <li><a href="/">Home</a></li>
            <li><a href="/leaderboard">Leaderboard</a></li>
            <li><a href="/dashboard" class="active">Profile</a></li>
        </ul>
    </nav>

    <!-- Profile Content -->
    <div class="container">
        <div class="profile-header">
            <div class="avatar-section">
                <h2>My Profile</h2>
                <button class="generate-btn edit-btn">✏️ Edit Profile</button>
            </div>
            
            <div class="profile-details feature-card">
                <h2 class="username"><%= user.name %></h2>
                <div class="detail-item">
                    <span class="detail-label">Email:</span>
                    <span class="detail-value"><%= user.email %></span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Member Since:</span>
                    <span class="detail-value"><%= new Date(user.createdAt).toLocaleDateString('en-US', { 
                        year: 'numeric', 
                        month: 'long' 
                    }) %></span>
                </div>
            </div>
        </div>
        
        <!-- Add additional dashboard content here if needed -->

        <div style="text-align: center; margin-top: 2rem;">
            <a href="/logout" class="generate-btn">Logout</a>
        </div>
    </div>
</body>
