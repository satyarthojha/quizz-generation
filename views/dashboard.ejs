    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Segoe UI', sans-serif;
}

body {
    background: var(--dark-bg);
    color: white;
    min-height: 100vh;
    overflow-x: hidden;
}

.particles {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle, 
        var(--neon-pink) 0%, 
        var(--electric-blue) 50%, 
        transparent 100%);
    opacity: 0.05;
    z-index: 0;
    animation: particles 20s linear infinite;
}

@keyframes particles {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}

.navbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 2rem;
    background: rgba(0,0,0,0.4);
    backdrop-filter: blur(10px);
    position: fixed;
    width: 100%;
    top: 0;
    z-index: 1000;
}

.navbar-logo {
    display: flex;
    align-items: center;
    gap: 1rem;
}

.logo-img {
    height: 40px;
    filter: drop-shadow(0 0 10px var(--electric-blue));
}

.logo {
    font-family: 'Pacifico', cursive;
    font-size: 2rem;
    background: linear-gradient(45deg, var(--neon-pink), var(--electric-blue));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
}

.navbar-links {
    display: flex;
    gap: 2rem;
    list-style: none;
}

.navbar-links a {
    color: white;
    text-decoration: none;
    padding: 0.5rem 1rem;
    border-radius: 8px;
    transition: all 0.3s ease;
}

.navbar-links a:hover {
    background: rgba(255,255,255,0.1);
    text-shadow: 0 0 15px var(--electric-blue);
}

.navbar-links .active {
    background: rgba(255,255,255,0.2);
}

.generate-btn {
    padding: 0.8rem 2rem;
    background: linear-gradient(45deg, var(--magenta), var(--neon-pink));
    border-radius: 8px;
    color: white;
    text-decoration: none;
    transition: all 0.3s ease;
}

.generate-btn:hover {
    transform: scale(1.05);
    box-shadow: 0 0 30px rgba(255,0,255,0.3);
}

.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
    position: relative;
    z-index: 1;
    margin-top: 80px;
}

.feature-card {
    background: rgba(255,255,255,0.05);
    padding: 2rem;
    border-radius: 15px;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255,255,255,0.1);
    transition: all 0.3s ease;
}

.feature-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 0 30px rgba(0,243,255,0.2);
}

.gradient-border {
    background: linear-gradient(45deg, 
        var(--neon-pink), 
        var(--violet),
        var(--electric-blue));
    padding: 3px;
    border-radius: 15px;
    animation: border-glow 2s ease infinite;
}

@keyframes border-glow {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.8; }
}

.url-input {
    width: 100%;
    padding: 1rem;
    background: rgba(0,0,0,0.6);
    border: none;
    border-radius: 12px;
    color: white;
    backdrop-filter: blur(10px);
    font-size: 1rem;
}

.url-input:focus {
    outline: none;
    box-shadow: 0 0 20px rgba(255, 0, 255, 0.3);
    background: rgba(0, 0, 0, 0.4);
}

.combined-content-section {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    margin: 3rem 0;
}

.feature-image {
    width: 100%;
    max-width: 600px;
    height: auto;
    margin: 0 auto;
    display: block;
    border-radius: 20px;
    box-shadow: 0 0 40px rgba(255,0,255,0.2);
}

.signin-container {
    max-width: 500px;
    margin: 0 auto;
    padding: 2rem 0;
    min-height: 80vh;
    display: flex;
    align-items: center;
}

.auth-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    margin-top: 2rem;
}

.auth-links {
    margin-top: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.auth-links a {
    color: var(--electric-blue);
    text-decoration: none;
    transition: all 0.3s ease;
}

.auth-links a:hover {
    text-shadow: 0 0 15px rgba(0, 243, 255, 0.4);
}

@media (max-width: 768px) {
    .navbar {
        flex-direction: column;
        gap: 1rem;
        padding: 1rem;
    }

    .combined-content-section {
        flex-direction: column;
    }

    .logo {
        font-size: 1.5rem;
    }
}

@media (max-width: 480px) {
    .container {
        padding: 1rem;
    }
    
    .generate-btn {
        width: 100%;
    }
}
/* Profile Page Specific Styles */
.profile-header {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: 2rem;
    align-items: center;
    margin: 2rem 0;
}

.avatar-container {
    width: 150px;
    height: 150px;
    border-radius: 50%;
    padding: 3px;
}

.avatar-img {
    width: 100%;
    height: 100%;
    border-radius: 2%;
    object-fit: cover;
    background: rgba(0,0,0,0.3);
}

.edit-btn {
    margin-top: 1rem;
    width: 100%;
    padding: 0.8rem;
    font-size: 0.9rem;
}

.profile-details {
    padding: 2rem;
    background: rgba(255,255,255,0.05);
}

.username {
    background: linear-gradient(45deg, var(--neon-pink), var(--electric-blue));
    padding: 0.5rem 1rem; /* Adds spacing to make it rectangular */
    display: inline-block; /* Ensures the background applies properly */
    color: white; /* Ensures text remains visible */
    border-radius: 5px; /* Optional: Adjusts corner radius */
}

.detail-item {
    display: flex;
    justify-content: space-between;
    padding: 1rem 0;
    border-bottom: 1px solid rgba(255,255,255,0.1);
}

.detail-item:last-child {
    border-bottom: none;
}

.detail-label {
    color: var(--electric-blue);
}

.detail-value {
    color: rgba(255,255,255,0.9);
}

.badges-grid {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    margin-top: 1.5rem;
}

.badge {
    padding: 0.5rem 1.2rem;
    border-radius: 20px;
    border: 1px solid rgba(255,255,255,0.2);
}

.neon-pink {
    background: linear-gradient(45deg, var(--neon-pink), var(--magenta));
    padding: 0.5rem 1rem;
    display: inline-block;
    color: white;
    border-radius: 5px;
}
.progress-section {
    padding: 2rem;
    margin-top: 2rem;
}

.course-progress {
    margin-top: 1.5rem;
}

.progress-bar-container {
    height: 8px;
    background: rgba(255,255,255,0.1);
    border-radius: 4px;
    margin: 1rem 0;
}

.progress-text {
    color: var(--electric-blue);
    font-size: 0.9rem;
}

/* Responsive Design */
@media (max-width: 768px) {
    .profile-header {
        grid-template-columns: 1fr;
        text-align: center;
    }
    
    .avatar-container {
        margin: 0 auto;
    }
    
    .badges-grid {
        justify-content: center;
    }
}

@media (max-width: 480px) {
    .avatar-container {
        width: 120px;
        height: 120px;
    }
    
    .detail-item {
        flex-direction: column;
        gap: 0.5rem;
    }
}
