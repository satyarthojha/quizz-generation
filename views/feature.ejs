    <style>
        :root {
    --neon-pink: #ff00ff;
    --electric-blue: #00f3ff;
    --violet: #9d00ff;
    --magenta: #ff0066;
    --cyber-green: #00ff9d;
    --dark-bg: linear-gradient(45deg, #0f0c29, #302b63, #24243e);
}

/* Base Styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Segoe UI', sans-serif;
}

body {
    background: var(--dark-bg);
    color: white;
    min-height: 100vh;
    overflow-x: hidden;
}

.particles {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle, 
        var(--neon-pink) 0%, 
        var(--electric-blue) 50%, 
        transparent 100%);
    opacity: 0.05;
    z-index: 0;
    animation: particles 20s linear infinite;
}

@keyframes particles {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}

/* Navigation */
.navbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 2rem;
    background: rgba(0,0,0,0.4);
    backdrop-filter: blur(10px);
    position: fixed;
    width: 100%;
    top: 0;
    z-index: 1000;
}

.navbar-logo {
    display: flex;
    align-items: center;
    gap: 1rem;
}

.logo-img {
    height: 40px;
    filter: drop-shadow(0 0 10px var(--electric-blue));
}

.logo {
    font-family: 'Pacifico', cursive;
    font-size: 2rem;
    background: linear-gradient(45deg, var(--neon-pink), var(--electric-blue));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
}

.navbar-links {
    display: flex;
    gap: 2rem;
    list-style: none;
}

.navbar-links a {
    color: white;
    text-decoration: none;
    padding: 0.5rem 1rem;
    border-radius: 8px;
    transition: all 0.3s ease;
}

.navbar-links a:hover {
    background: rgba(255,255,255,0.1);
    text-shadow: 0 0 15px var(--electric-blue);
}

.navbar-links .active {
    background: rgba(255,255,255,0.2);
}

.generate-btn {
    padding: 0.8rem 2rem;
    background: linear-gradient(45deg, var(--magenta), var(--neon-pink));
    border-radius: 8px;
    color: white;
    text-decoration: none;
    transition: all 0.3s ease;
}

.generate-btn:hover {
    transform: scale(1.05);
    box-shadow: 0 0 30px rgba(255,0,255,0.3);
}

/* Main Content */
.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
    position: relative;
    z-index: 1;
    margin-top: 80px;
}

.combined-content-section {
    display: grid;
    grid-template-columns: 1fr; /* Ensures single-column layout */
    gap: 3rem;
    margin: 2rem 0;
}

.left-content feature-card {
    order: 1; /* Ensures it stays on top */
}

right-content feature-card {
    order: 2; /* Moves it below left-content */
}

.feature-card {
    background: rgba(255,255,255,0.05);
    padding: 2rem;
    border-radius: 15px;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255,255,255,0.1);
    transition: all 0.3s ease;
}

.feature-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 0 30px rgba(0,243,255,0.2);
}

/* Contact Page Specific */
.contact-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    margin-top: 2rem;
}

.gradient-border {
    background: linear-gradient(45deg, 
        var(--neon-pink), 
        var(--violet),
        var(--electric-blue));
    padding: 3px;
    border-radius: 15px;
    animation: border-glow 2s ease infinite;
}

@keyframes border-glow {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.8; }
}

.url-input {
    width: 100%;
    padding: 1rem;
    background: rgba(0,0,0,0.6);
    border: none;
    border-radius: 12px;
    color: white;
    backdrop-filter: blur(10px);
    font-size: 1rem;
}

textarea.url-input {
    resize: vertical;
    min-height: 120px;
}

.contact-info {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    padding: 2rem;
}

.social-links {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-top: 2rem;
}

.social-btn {
    display: flex;
    align-items: center;
    gap: 1rem;
    justify-content: center;
}

.icon {
    font-size: 1.5rem;
    animation: float 3s ease-in-out infinite;
}

@keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-5px); }
}

.map-container {
    margin-top: 2rem;
    border-radius: 15px;
    overflow: hidden;
    max-width: 1000px;
    margin: 2rem auto;
}

/* Responsive Design */
@media (max-width: 768px) {
    .navbar {
        flex-direction: column;
        gap: 1rem;
        padding: 1rem;
    }

    .combined-content-section {
    display: flex;
    flex-direction: column;
    gap: 3rem;
    margin: 2rem 0;
}

    .map-container {
        margin: 1rem;
    }

    .navbar-links {
        flex-wrap: wrap;
        justify-content: center;
    }

    .generate-btn {
        width: 100%;
        text-align: center;
    }
}

@media (max-width: 480px) {
    .container {
        padding: 1rem;
    }
    
    .feature-card {
        padding: 1.5rem;
    }
    
    .logo {
        font-size: 1.5rem;
    }
}
       /* Existing styles remain the same */

/* Features Page Additions */
.features-hero {
    text-align: center;
    margin: 4rem 0;
}

.feature-list {
    list-style: none;
    margin: 2rem 0;
}

.feature-item {
    padding: 1rem;
    margin: 1rem 0;
    background: rgba(255,255,255,0.05);
    border-radius: 8px;
    display: flex;
    align-items: center;
    gap: 1rem;
    transition: all 0.3s ease;
}

.feature-item:hover {
    transform: translateX(10px);
    background: rgba(255,255,255,0.1);
}

/* Enhanced Features Grid */
.features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin: 3rem 0;
}

.feature-card h3 {
    margin: 1rem 0;
    background: linear-gradient(45deg, var(--neon-pink), var(--electric-blue));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
}

/* Responsive Adjustments */
@media (max-width: 768px) {
    .features-grid {
        grid-template-columns: 1fr;
    }
    
    .combined-content-section {
        flex-direction: column;
    }
}         
